import os, sys
import argparse

CONTROL_FIFO = "%s/cplay-control-%s" % (os.environ.get("TMPDIR", "/tmp"), os.environ["USER"])

parser = argparse.ArgumentParser(description="enqueue files and URLs into cplay")
parser.add_argument('paths', metavar="path", nargs='+')
args = parser.parse_args()

if __name__ == "__main__":
    if os.path.exists(CONTROL_FIFO):
        fd = open(CONTROL_FIFO, "wb", 0)
        for a in args.paths:
            if not a.startswith('http'):
                a = os.path.abspath(a)
            fd.write('add %s\n' % a)
        fd.close()
    else:
        print('Could not find %s.' % CONTROL_FIFO)
        sys.exit(2)
